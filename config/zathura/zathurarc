# zathurarc - with solarized color scheme

set font                        "Minion Pro 9"
set default-bg                  "#fdf6e3"
set default-fg                  "#657b83"

set statusbar-bg                "#073642"
set statusbar-fg                "#586e75"

set inputbar-bg                 "#073642"
set inputbar-fg                 "#fdf6e3"

set notification-error-bg       "#dc322f"
set notification-error-fg       "#fdf6e3"

set notification-warning-bg     "#cb4b16"
set notification-warning-fg     "#fdf6e3"

set highlight-color             "#b58900"
set highlight-active-color      "#cb4b16"
set highlight-transparency      "0.2"

set completion-bg               "#073642"
set completion-fg               "#657b83"

set completion-highlight-bg     "#93a1a1"
set completion-highlight-fg     "#073642"

set notification-bg             "#268bd2"
set notification-fg             "#fdf6e3"

set tabbar-bg                   "#000000"
set tabbar-fg                   "#ffffff"
set tabbar-focus-bg             "#000000"
set tabbar-focus-fg             "#9fbc00"
set recolor-lightcolor          "#fdf6e3"
set recolor-darkcolor           "#002b36"
set recolor                     "false"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, it'll just be black and white
set recolor-keephue             "false"

set adjust-open                 "width"
set page-padding                "10"
# guioptions show or hide certain GUI elements
# c - alway show the command line, s - statusbar
set guioptions                  "s"
set show-scrollbars             "true"
set window-height               "600"
set window-width                "800"

map w adjust_window "width"
map z adjust_window "bestfit"
map i set recolor

protocol       smtp
from           0890040@hr.nl
user           0890040@hr.nl
passwordeval   python -c "import subprocess; print(subprocess.check_output(['pass', 'show', '0890040@hr.nl']).strip().decode())"

# sjorssparreboom
# ----------------------------------------------------
account        sjorssparreboom
host           www70.totaalholding.nl
port           465
protocol       smtp
from           mail@sjorssparreboom.nl
user           mail@sjorssparreboom.nl
tls_starttls   off
passwordeval   python -c "import subprocess; print(subprocess.check_output(['pass', 'show', 'mail@sjorssparreboom.nl']).strip().decode())"

# Set a default account
account default : sjorssparreboom

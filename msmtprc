# Set default values for all following accounts.
# ----------------------------------------------------
defaults
auth           on
tls            on
tls_certcheck  on
tls_starttls   on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        /var/log/enigma-logs/msmtp.log
syslog off

# gmail
# ----------------------------------------------------
account        gmail
host           smtp.gmail.com
port           587
from           jlssparreboom@gmail.com
user           jlssparreboom
passwordeval   python -c "import subprocess; print(subprocess.check_output(['pass', 'show', 'jlssparreboom@gmail.com']).strip().decode())"


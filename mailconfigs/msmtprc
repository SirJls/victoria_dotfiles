# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_starttls   on
logfile        /tmp/msmtp.log
syslog off

# Gmail
account        gmail
host           smtp.gmail.com
port           587
from           jlssparreboom@gmail.com
tls_trust_file /etc/ssl/certs/ca-certificates.crt
user           jlssparreboom@gmail.com
passwordeval   python -c "import keyring; print keyring.get_password('gmail', 'jls')"

# School
account        HRO
host           smtp.hro.nl
port           587
from           0890040@hr.nl
tls_trust_file /etc/ssl/certs/ca-certificates.crt
user           0890040
passwordeval   python -c "import keyring; print keyring.get_password('gmail', 'jls')"

# Set a default account
account default : gmail
